.sellerItem-container {
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  padding: 32rpx 20rpx;
  margin: 16rpx 0;
  background: #fff;
}

.info-wrapper {
  display: flex;
  padding-bottom: 4px;
}

.avatar {
  width: 95rpx;
  height: 95rpx;
  border-radius: 50%;
  margin-left: 10rpx;
}

.location-icon {
  width: 24rpx;
  height: 24rpx;
  vertical-align: -1rpx;
}

.info {
  line-height: 1.8;
  padding-left: 10px;
}

.info .name {
  font-size: 13px;
}

.phone-icon {
  color: #999;
}

.location-wrapper {
  padding-top: 10rpx;
  color: #999;
  padding-left: 18rpx;
}

.phone-icon {
  width: 25rpx;
  height: 25rpx;
  vertical-align: -1px;
  opacity: .5;
  margin-right: 5rpx;
}

.layout-right {
  display: flex;
  align-items: flex-end;
  flex-direction: column;
}

.img-wrapper {
  width: 40px;
  height: 40px;
  border-radius: 50px;
  text-align: center;
  background: #ffd300;
  margin-right: 20rpx;
  cursor: pointer;
  box-shadow: 0 0 3px #ffd300;
}

.distance {
  color: #999;
  padding-top: 28rpx;
}

.inner-phone {
  width: 40%;
  height: 40%;
  margin-top: 25rpx;
}