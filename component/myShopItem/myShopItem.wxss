  background: #fff;
}

.info-wrapper {
  display: flex;
  padding-bottom: 4px;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
}

.location-icon {
  width: 24rpx;
  height: 24rpx;
  vertical-align: -4rpx;
}

.info {
  line-height: 1.8;
