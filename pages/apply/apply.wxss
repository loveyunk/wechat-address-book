.apply-container {
  font-size: 13px;
}

.section {
  margin: 25rpx 0;
}

.section-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 102rpx;
  line-height: 102rpx;
  background: #fff;
  border-bottom: 1px solid #efefef;
  padding-left: 40rpx;
}

.section-img {
  padding: 20rpx 40rpx;
}

.location-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: -8rpx;
  margin-top: -3rpx;
}

.image-icon {
  width: 100rpx;
  height: 100rpx;
}

.arrow-icon {
  width: 40rpx;
  height: 40rpx;
  padding-right: 20rpx;
  margin-bottom: -10rpx;
  opacity: 0.6;
}

.section__input {
  width: 50%;
}

.picker-wrapper {
  width: 50%;
}

.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.address-wrapper {
  display: flex;
  align-items: center;
}

.address {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-left: 5rpx;
}

.intro-wrapper {
  background: #fff;
  box-sizing: border-box;
  padding: 10rpx 42rpx 50rpx 42rpx;
  margin-top: -15px;
}

.intro-wrapper .img-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  cursor: pointer;
  margin-right: 10rpx;
}

.delete-mask {
  content: '';
  position: absolute;
  z-index: 2;
  bottom: 0rpx;
  left: 0rpx;
  right: 0rpx;
  top: 80%;
  background: rgba(0, 0, 0, .3);
  display: flex;
  justify-content: center;
  align-items: center;
}

.delete-icon {
  width: 30rpx;
  height: 30rpx;
}

.section__textarea {
  box-sizing: border-box;
  background: #fff;
  width: 100%;
}

.upload-icon {
  width: 100rpx;
  height: 100rpx;
  border: 1px solid #eee;
  background: #efefef;
  padding: 50rpx;
  cursor: pointer;
}

.apply-btn {
  margin: 50rpx 0;
}

.checkbox {
  zoom: 60%;
  vertical-align: 10rpx;
  margin-left: 40rpx;
}


