.userinfo {
  display: flex; 
  height: 180rpx;
  background: #fff;
  margin-bottom: 40rpx;
  align-items: center;
  padding-left: 40rpx;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  padding-left: 20rpx;
}

.nav-item {
  height: 102rpx;
  line-height: 102rpx;
  background: #fff;
  border-bottom: 1px solid #efefef;
  padding-left: 40rpx;
}

.nav-item-icon {
  width: 30rpx;
  height: 30rpx;
  padding-right: 6rpx; 
  vertical-align: middle;
}

.contact-us {
  margin-top: 40rpx;
}

.company-info {
  text-align: center;
  padding: 60rpx 0;
  font-size: 12px;
  color: #888;
}
