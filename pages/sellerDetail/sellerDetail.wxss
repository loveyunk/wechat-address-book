.header {
  display: flex;
  background: #fff;
}

.logo-wrapper {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.section-item__location-icon {
  width: 32rpx;
  height: 32rpx;
}

.layout-right {
  flex: 1;
  padding: 30rpx 40rpx 20rpx 15rpx;
  display: flex;
  flex-direction: column;
  color: #999;
  font-size: 13px;
}

.layout-right-top {
  display: flex;
  justify-content: space-between;
  padding-top: 10rpx;
}

.layout-right-top .title {
  font-size: 35rpx;
  color: #333;
}

.layout-right-top .favorite-icon {
  width: 50rpx;
  height: 50rpx;
  opacity: 0.6;
}

.intro-section-item {
  display: flex;
  flex-direction: column;
}

.intro-img-wrapper {
  margin: 30rpx 0;
}

.intro-img {
  width: 150rpx;
  height: 150rpx;
  margin: 0 20rpx
}

.layout-right-bottom {
  display: flex;
  justify-content: space-between;
  padding-top: 30rpx;
}

.section {
  margin: 20rpx 0;
}

.section-item {
  font-size: 28rpx;
  background: #fff;
  padding: 30rpx 20rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #efefef;
}

.section-item__content {
  color: #999;
}

.location-section-item {
  display: flex;
   justify-content: flex-start; 
}

.detail-address {
  padding-left: 20rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  height: 102rpx;
  background: #fff;
  width: 100%;
  border-top: 1px solid #efefef;
  display: flex;
  justify-content: space-between;
}

.footer-item {
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
  color: #333;
  align-items: center;
  justify-content: center;
  width: 25%;
}

.footer-item__icon {
  width: 38rpx;
  height: 38rpx;
  margin-bottom: 5rpx;
}

.footer-item-last {
  width: 40%;
  background: #ffd300;
  line-height: 102rpx;
  color: #fff;
  font-size: 29rpx;
}
